set(CMAKE_SYSTEM_NAME Linux)
set(CMAKE_SYSTEM_PROCESSOR x86_64)
set(CMAKE_TRY_COMPILE_TARGET_TYPE STATIC_LIBRARY)

if (NOT DEFINED CMAKE_C_COMPILER)
    if (DEFINED ENV{AERO_CC_LINUX_X86_64})
        set(CMAKE_C_COMPILER "$ENV{AERO_CC_LINUX_X86_64}" CACHE FILEPATH "C compiler for linux-x86_64" FORCE)
    else()
        set(CMAKE_C_COMPILER gcc CACHE FILEPATH "C compiler for linux-x86_64" FORCE)
    endif()
endif()

if (NOT DEFINED CMAKE_CXX_COMPILER)
    if (DEFINED ENV{AERO_CXX_LINUX_X86_64})
        set(CMAKE_CXX_COMPILER "$ENV{AERO_CXX_LINUX_X86_64}" CACHE FILEPATH "CXX compiler for linux-x86_64" FORCE)
    else()
        set(CMAKE_CXX_COMPILER g++ CACHE FILEPATH "CXX compiler for linux-x86_64" FORCE)
    endif()
endif()
